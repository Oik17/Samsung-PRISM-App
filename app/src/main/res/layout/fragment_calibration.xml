<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="16dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView android:text="Calibration" android:textSize="20sp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <EditText android:id="@+id/etRoom" android:hint="Room name / id" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnHotspotGuide" android:text="Open Wi-Fi/Hotspot Settings" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnStart" android:text="Start" android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/tvStatus" android:text="Idle" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:text="Tips: place hotspot(s) in fixed positions, collect several scans walking around the room." android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingTop="12dp"/>
</LinearLayout>
